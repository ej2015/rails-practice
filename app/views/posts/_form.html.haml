= simple_form_for post, html: { class: 'form-horizontal' } do |form|
  - if post.errors.any?
    #error_explanation
      %h2
        = pluralize(post.errors.count, "error")
        prohibited this post from being saved:
      %ul
        - post.errors.full_messages.each do |message|
          %li= message
  = form.input :title
  = form.input :category, as: :radio_buttons, collection: Post.categories
  = form.input :body, as: :text
  = form.button :submit, class: 'btn btn-primary'
